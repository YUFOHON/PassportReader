<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F5F5F5"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@android:color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="ðŸ“˜ Passport NFC Reader"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#1976D2"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Complete ePassport Data Extraction"
                    android:textSize="14sp"
                    android:textColor="#666666"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Input Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@android:color/white">

                <!-- Scan Button -->
                <Button
                    android:id="@+id/btn_scan"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="ðŸ“· Step 1: Scan MRZ with Camera"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:backgroundTint="#2196F3"
                    android:textColor="@android:color/white"
                    android:drawablePadding="8dp"
                    android:layout_marginBottom="16dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Or enter MRZ details manually:"
                    android:textStyle="italic"
                    android:textColor="#666666"
                    android:layout_marginBottom="12dp"/>

                <!-- Input Fields -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Document Number"
                    app:helperText="e.g., A1234567"
                    app:helperTextEnabled="true"
                    app:boxBackgroundMode="outline"
                    app:boxStrokeColor="#2196F3">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/ed_doc_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textCapCharacters"
                        android:maxLength="9"
                        android:textSize="16sp"
                        android:textColor="#000000"
                        android:textColorHint="#757575"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:hint="Date of Birth"
                    app:helperText="Format: YYMMDD (e.g., 900115)"
                    app:helperTextEnabled="true"
                    app:boxBackgroundMode="outline"
                    app:boxStrokeColor="#2196F3">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/ed_birth_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:maxLength="6"
                        android:textSize="16sp"
                        android:textColor="#000000"
                        android:textColorHint="#757575"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:hint="Expiry Date"
                    app:helperText="Format: YYMMDD (e.g., 300115)"
                    app:helperTextEnabled="true"
                    app:boxBackgroundMode="outline"
                    app:boxStrokeColor="#2196F3">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/ed_expiry_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:maxLength="6"
                        android:textSize="16sp"
                        android:textColor="#000000"
                        android:textColorHint="#757575"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Status Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#FFF3E0">

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:gravity="center"
                android:text="ðŸ“± Step 2: Tap passport to back of phone"
                android:textColor="#E65100"
                android:textSize="16sp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

        <!-- Results Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@android:color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“Š Passport Data"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#1976D2"
                    android:layout_marginBottom="16dp"/>

                <!-- Photo Section -->
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="2dp">

                    <ImageView
                        android:id="@+id/image_face"
                        android:layout_width="180dp"
                        android:layout_height="240dp"
                        android:background="#E0E0E0"
                        android:scaleType="centerCrop"
                        android:contentDescription="Passport Photo" />
                </androidx.cardview.widget.CardView>

                <!-- Scrollable Results Text -->
                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxHeight="400dp"
                    android:fillViewport="true"
                    android:background="#FAFAFA"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/tv_result"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Results will appear here after scanning...\n\nSupported Data Groups:\nâ€¢ DG1 - MRZ (Mandatory)\nâ€¢ DG2 - Face Image\nâ€¢ DG3 - Fingerprints\nâ€¢ DG4 - Iris Scans\nâ€¢ DG5 - Portrait\nâ€¢ DG7 - Signature\nâ€¢ DG11 - Personal Details\nâ€¢ DG12 - Document Details\nâ€¢ DG14 - Security Options\nâ€¢ DG15 - Active Authentication"
                        android:fontFamily="monospace"
                        android:textSize="13sp"
                        android:textColor="#212121"
                        android:lineSpacingExtra="2dp"
                        android:textIsSelectable="true"/>
                </androidx.core.widget.NestedScrollView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Footer Info -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:text="ðŸ”’ All data is processed locally on device"
            android:textSize="12sp"
            android:textColor="#666666"
            android:textStyle="italic"/>

    </LinearLayout>
</ScrollView>